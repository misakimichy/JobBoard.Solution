@using JobPost.Models;

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Job Board</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h1>Contact details</h1>
            @if (Model.Count == 0)
            {
                <p>There is no job openings.</p>
            }
            <ul class="list-group">
                @foreach (JobOpening job in Model)
                {

                    <li class="list-group-item">
                        @job.Title <br><br>
                        @job.Description <br><br>
                        Contact to @job.ContactList.FullName. My email is @job.ContactList.Email and my phone number is @job.ContactList.PhoneNumber  
                    </li>
                }
            </ul>

            <h4><a href="/jobs/new">Add more openings</a></h4>
            <h4><a href="/">Go Home</a></h4>
        </div>
    </body>
</html>